<html>

<head>
    <title>{{title}}</title>
</head>

<body>
    <h1>To Do List</h1>
    <form action='/' method='POST'>
        <input name='task' placeholder='Task Description'>
        <button type='submit'>ADD</button>
    </form>
    <ul>
        {{#each tasks as |t|}}
        <li>{{t}}</li>
        {{/each}}
    </ul>
</body>

</html>